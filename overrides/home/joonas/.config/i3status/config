

general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

# order += "ipv6"
order += "battery 0"
order += "wireless _first_"
order += "disk /"
# order += "run_watch DHCP"
# order += "path_exists VPN"
# order += "ethernet enp3s0"
order += "memory"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "tztime local"

ethernet enp3s0 {
        format_up = "🖧 %ip"
        # format_up = "🖧 %ip (%speed)"
        format_down = "🖧 down"
}

battery 0 {
        format = "%status %percentage %remaining"
        format_down = ""
        status_chr = "⚡"
        status_bat = "🔋"
        status_unk = "?"
        status_full = "☻ FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

# run_watch DHCP {
#         pidfile = "/var/run/dhclient*.pid"
# }
# 
# path_exists VPN {
#         # path exists when a VPN tunnel launched by nmcli/nm-applet is active
#         path = "/proc/sys/net/ipv4/conf/tun0"
# }

wireless _first_ {
        format_up = "📶 %quality %essid"
        format_down = ""
        color_good = "#FFFFFF"
}

tztime local {
        format = "📅 %d.%m ⏰ %H:%M"
}

cpu_usage {
        format = "💪 %usage"
}

cpu_temperature 0 {
        format = "🌡 %degrees °C"
        path = "/dev/cpu_temp"
}

memory {
        format = "🍫 %available"
        threshold_degraded = "10%"
}

disk "/" {
        format = "💽 %free"
}

read_file uptime {
        path = "/proc/uptime"
}
