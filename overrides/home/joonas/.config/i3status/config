

general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

# order += "ipv6"
order += "disk /"
# order += "run_watch DHCP"
# order += "path_exists VPN"
order += "ethernet enp3s0"
# order += "battery 0"
order += "cpu_temperature 0"
order += "memory"
order += "load"
order += "tztime local"

ethernet enp3s0 {
        format_up = "🖧 %ip"
        # format_up = "🖧 %ip (%speed)"
        format_down = "🖧 down"
}

battery 0 {
        format = "%status %percentage %remaining %emptytime"
        format_down = "No battery"
        status_chr = "⚡ CHR"
        status_bat = "🔋 BAT"
        status_unk = "? UNK"
        status_full = "☻ FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

# run_watch DHCP {
#         pidfile = "/var/run/dhclient*.pid"
# }
# 
# path_exists VPN {
#         # path exists when a VPN tunnel launched by nmcli/nm-applet is active
#         path = "/proc/sys/net/ipv4/conf/tun0"
# }

tztime local {
        format = "📅 %d.%m ⏰ %H:%M"
}

load {
        format = "⚡ %1min"
}

cpu_temperature 0 {
        format = "🌡 %degrees °C"
        path = "/sys/class/hwmon/hwmon1/temp2_input"
}

memory {
        format = "🍫 %available"
        threshold_degraded = "10%"
}

disk "/" {
        format = "💽 %free"
}

read_file uptime {
        path = "/proc/uptime"
}
